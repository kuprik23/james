{
  "name": "cybercat-standalone",
  "version": "1.0.0",
  "description": "CyberCat - AI-Powered Cybersecurity Analysis Tool",
  "main": "cybercat.js",
  "bin": {
    "cybercat": "./cybercat.js"
  },
  "scripts": {
    "start": "node cybercat.js",
    "build": "pkg . --targets node18-win-x64 --output dist/CyberCat.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist"
  },
  "pkg": {
    "assets": [
      "templates/**/*",
      "config/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "cybersecurity",
    "security",
    "analysis",
    "network",
    "vulnerability"
  ],
  "author": "CYBERCAT Security Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "boxen": "^5.1.2",
    "cli-table3": "^0.6.3",
    "axios": "^1.6.2",
    "systeminformation": "^5.21.20",
    "node-fetch": "^2.7.0",
    "dns-packet": "^5.6.1",
    "ping": "^0.4.4"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
